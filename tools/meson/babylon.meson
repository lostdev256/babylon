# Общие флаги (пример — безопасно проверяем поддержку)
cpp = meson.get_compiler('cpp')
common_cargs = []
foreach f : ['-Wall', '-Wextra']
    if cpp.has_argument(f)
        common_cargs += [f]
    endif
endforeach

